<!--logs.wxml-->
<view id="classify">
  <view class="weui-flex">
    <block wx:for="{{classifyArray}}" wx:for-item="classify" wx:key="classify.value">
      <view class="weui-flex__item">
        <view class="{{ classify.active ? 'placeholder acitve' : 'placeholder'}}" 
        data-value="{{ classify.value }}" bindtap="tabToggle">
          {{ classify.label }}
        </view>
      </view>
    </block>
  </view>
  <view class="clearFix class-list" :wx-if="loading">
    <block wx:for="{{currentList}}" wx:for-item="item" wx:key="item.bookCount">
      <view class="class-float">
        <view class="class-item" data-params="{{ item }}" bindtap="jumpList">
          <view class='item-text'>
            <view><text class='text-middle'>{{ item.name }}</text></view>
            <view><text class='text-min'>共{{ item.bookCount }}本</text></view>
          </view>
          <view class='item-image'>
            <image class='image' lazy-load="true"
             mode="aspectFit" 
             src="{{ imageUrl + item.bookCover[0] }}" ></image>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>
